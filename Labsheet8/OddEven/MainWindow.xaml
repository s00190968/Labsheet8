<Window x:Class="OddEven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OddEven"
        mc:Ignorable="d"
        Title="Odd or even" Height="450" Width="426.856">
    <Grid>
        <Button x:Name="submitBtn" Content="Submit" HorizontalAlignment="Left" Margin="101,206,0,0" VerticalAlignment="Top" Width="75" Click="submitBtn_Click"/>
        <TextBlock x:Name="msgTxbk" HorizontalAlignment="Left" Margin="101,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="numberTxt" HorizontalAlignment="Left" Height="40" Margin="101,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" GotFocus="numberTxt_GotFocus"/>
        <TextBlock x:Name="sentenceTxbk" HorizontalAlignment="Left" Margin="101,56,0,0" TextWrapping="Wrap" Text="Is the number odd or even?" VerticalAlignment="Top" Width="223"/>

    </Grid>
</Window>
